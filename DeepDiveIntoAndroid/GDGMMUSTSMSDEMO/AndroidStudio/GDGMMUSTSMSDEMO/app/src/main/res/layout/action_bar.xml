<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/action_bar_imageView_actionBar_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo_no_fill" />

            <TextView
                android:id="@+id/action_bar_textView_actionBar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" android:textColor="#0AB3F1"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/action_bar_imageView_actionBar_icon"
                android:text="@string/app_name" />


        </RelativeLayout>

        <View
            android:id="@+id/action_bar_view_actionBar_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#0AB3F1" />
    </LinearLayout>
</LinearLayout>