<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spalsh_relativeLayout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splash_imageView_gdgmmust_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:contentDescription="@string/splash"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/splash_textView_gdgmmust_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_imageView_gdgmmust_icon"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/logo_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/splash_textView_dev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_textView_gdgmmust_label"
        android:layout_centerHorizontal="true"
        android:text="@string/dev_name"
        android:textColor="@color/dev_color"
        android:textSize="16sp" />


</RelativeLayout>